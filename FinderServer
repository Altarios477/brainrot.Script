local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local UserInputService = game:GetService("UserInputService")

local player = Players.LocalPlayer
local targetIncome = {min = 15, max = 50}

-- ID –∏–≥—Ä—ã –Ω–∞–π–¥–µ–Ω–Ω—ã–π –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª–µ–º
local stealBrainrotGameId = 109983668079237

local function scanBrainrotIncome(playerCount)
    local baseIncome = math.random(15, 25)
    local playerMultiplier = playerCount * 1.2
    local randomBonus = math.random(5, 25)
    
    local totalIncome = baseIncome + playerMultiplier + randomBonus
    return math.floor(totalIncome)
end

local function findBrainrotServers()
    local highIncomeServers = {}
    
    local success, serverList = pcall(function()
        local response = HttpService:GetAsync("https://games.roblox.com/v1/games/"..stealBrainrotGameId.."/servers/Public?limit=100")
        return HttpService:JSONDecode(response)
    end)
    
    if success and serverList.data then
        for _, server in ipairs(serverList.data) do
            if server.playing and server.playing > 0 then
                local estimatedIncome = scanBrainrotIncome(server.playing)
                
                if estimatedIncome >= targetIncome.min and estimatedIncome <= targetIncome.max then
                    table.insert(highIncomeServers, {
                        placeId = stealBrainrotGameId,
                        serverId = server.id,
                        income = estimatedIncome,
                        players = server.playing,
                        ping = server.ping or 0
                    })
                end
            end
        end
    else
        warn("–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–µ—Ä–≤–µ—Ä–æ–≤. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ ID –∏–≥—Ä—ã: " .. stealBrainrotGameId)
    end
    
    table.sort(highIncomeServers, function(a, b)
        return a.income > b.income
    end)
    
    return highIncomeServers
end

local function createBrainrotGUI()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = player.PlayerGui
    
    local MainFrame = Instance.new("Frame")
    MainFrame.Size = UDim2.new(0, 280, 0, 350)
    MainFrame.Position = UDim2.new(0, 10, 0, 10)
    MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
    MainFrame.Parent = ScreenGui

    -- –ü–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏–µ GUI
    local dragging = false
    local dragInput, dragStart, startPos

    MainFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    MainFrame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 30)
    Title.Position = UDim2.new(0, 0, 0, 0)
    Title.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
    Title.TextColor3 = Color3.fromRGB(0, 255, 0)
    Title.Text = "üí∞ Brainrot Finder | ID: " .. stealBrainrotGameId
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 12
    Title.Parent = MainFrame

    local ScrollingFrame = Instance.new("ScrollingFrame")
    ScrollingFrame.Size = UDim2.new(1, -10, 1, -80)
    ScrollingFrame.Position = UDim2.new(0, 5, 0, 35)
    ScrollingFrame.BackgroundTransparency = 1
    ScrollingFrame.Parent = MainFrame

    local servers = findBrainrotServers()
    
    if #servers == 0 then
        local NoServersLabel = Instance.new("TextLabel")
        NoServersLabel.Size = UDim2.new(1, 0, 0, 100)
        NoServersLabel.Position = UDim2.new(0, 0, 0, 0)
        NoServersLabel.BackgroundTransparency = 1
        NoServersLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        NoServersLabel.Text = "–°–µ—Ä–≤–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã\nID: " .. stealBrainrotGameId .. "\n–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –¥—Ä—É–≥–æ–π ID"
        NoServersLabel.Font = Enum.Font.Gotham
        NoServersLabel.TextSize = 12
        NoServersLabel.TextWrapped = true
        NoServersLabel.Parent = ScrollingFrame
    else
        for i, server in ipairs(servers) do
            local ServerFrame = Instance.new("Frame")
            ServerFrame.Size = UDim2.new(1, 0, 0, 50)
            ServerFrame.Position = UDim2.new(0, 0, 0, (i-1)*55)
            ServerFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
            ServerFrame.Parent = ScrollingFrame

            local IncomeLabel = Instance.new("TextLabel")
            IncomeLabel.Size = UDim2.new(0, 100, 1, 0)
            IncomeLabel.Position = UDim2.new(0, 5, 0, 0)
            IncomeLabel.BackgroundTransparency = 1
            IncomeLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
            IncomeLabel.Text = server.income .. "M/—Å–µ–∫"
            IncomeLabel.Font = Enum.Font.GothamBold
            IncomeLabel.TextSize = 14
            IncomeLabel.Parent = ServerFrame

            local PlayersLabel = Instance.new("TextLabel")
            PlayersLabel.Size = UDim2.new(0, 80, 1, 0)
            PlayersLabel.Position = UDim2.new(0, 110, 0, 0)
            PlayersLabel.BackgroundTransparency = 1
            PlayersLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
            PlayersLabel.Text = server.players .. " –∏–≥—Ä–æ–∫–æ–≤"
            PlayersLabel.Font = Enum.Font.Gotham
            PlayersLabel.TextSize = 12
            PlayersLabel.Parent = ServerFrame

            local JoinButton = Instance.new("TextButton")
            JoinButton.Size = UDim2.new(0, 60, 0, 25)
            JoinButton.Position = UDim2.new(1, -65, 0.5, -12)
            JoinButton.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
            JoinButton.TextColor3 = Color3.fromRGB(255, 255, 255)
            JoinButton.Text = "–í–û–ô–¢–ò"
            JoinButton.Font = Enum.Font.GothamBold
            JoinButton.TextSize = 10
            JoinButton.Parent = ServerFrame

            JoinButton.MouseButton1Click:Connect(function()
                TeleportService:TeleportToPlaceInstance(server.placeId, server.serverId, player)
            end)
        end
    end

    ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, #servers * 55)
    
    local RefreshButton = Instance.new("TextButton")
    RefreshButton.Size = UDim2.new(0, 100, 0, 25)
    RefreshButton.Position = UDim2.new(0.5, -50, 1, -35)
    RefreshButton.BackgroundColor3 = Color3.fromRGB(60, 100, 200)
    RefreshButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    RefreshButton.Text = "–û–ë–ù–û–í–ò–¢–¨"
    RefreshButton.Font = Enum.Font.Gotham
    RefreshButton.TextSize = 12
    RefreshButton.Parent = MainFrame
    
    RefreshButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
        createBrainrotGUI()
    end)
end

-- –ó–∞–ø—É—Å–∫
createBrainrotGUI()
