local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer
local brainrotGameId = 14433750445 -- Steal a Brainrot

-- ServerHop —Å—Ç–∏–ª—å
local function createServerHop()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "BrainrotServerHop"
    ScreenGui.Parent = player.PlayerGui
    
    local MainFrame = Instance.new("Frame")
    MainFrame.Size = UDim2.new(0, 280, 0, 200)
    MainFrame.Position = UDim2.new(0, 20, 0, 20)
    MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui

    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 6)
    UICorner.Parent = MainFrame

    -- –ü–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏–µ
    local dragging = false
    local dragInput, dragStart, startPos

    MainFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    MainFrame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 35)
    Title.Position = UDim2.new(0, 0, 0, 0)
    Title.BackgroundColor3 = Color3.fromRGB(15, 15, 20)
    Title.TextColor3 = Color3.fromRGB(0, 255, 150)
    Title.Text = "üß† BRAINROT SERVERHOP"
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 14
    Title.Parent = MainFrame

    -- –°—Ç–∞—Ç—É—Å
    local StatusLabel = Instance.new("TextLabel")
    StatusLabel.Size = UDim2.new(1, -20, 0, 25)
    StatusLabel.Position = UDim2.new(0, 10, 0, 40)
    StatusLabel.BackgroundTransparency = 1
    StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
    StatusLabel.Text = "Scanning servers..."
    StatusLabel.Font = Enum.Font.Gotham
    StatusLabel.TextSize = 11
    StatusLabel.Parent = MainFrame

    -- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Å–µ—Ä–≤–µ—Ä–µ
    local ServerInfo = Instance.new("TextLabel")
    ServerInfo.Size = UDim2.new(1, -20, 0, 40)
    ServerInfo.Position = UDim2.new(0, 10, 0, 65)
    ServerInfo.BackgroundTransparency = 1
    ServerInfo.TextColor3 = Color3.fromRGB(150, 255, 150)
    ServerInfo.Text = "Players: 0\nIncome: 0M/sec"
    ServerInfo.Font = Enum.Font.Gotham
    ServerInfo.TextSize = 10
    ServerInfo.TextWrapped = true
    ServerInfo.Parent = MainFrame

    -- –§—É–Ω–∫—Ü–∏—è –ø–æ–∏—Å–∫–∞ –ª—É—á—à–µ–≥–æ —Å–µ—Ä–≤–µ—Ä–∞
    local function findBestServer()
        local bestServer = nil
        local maxPlayers = 0
        
        local success, result = pcall(function()
            local response = HttpService:GetAsync("https://games.roblox.com/v1/games/"..brainrotGameId.."/servers/Public?limit=100")
            return HttpService:JSONDecode(response)
        end)
        
        if success and result.data then
            for _, server in ipairs(result.data) do
                if server.playing and server.playing > 10 then -- –ú–∏–Ω–∏–º—É–º 10 –∏–≥—Ä–æ–∫–æ–≤
                    if server.playing > maxPlayers then
                        maxPlayers = server.playing
                        bestServer = {
                            placeId = brainrotGameId,
                            serverId = server.id,
                            players = server.playing,
                            ping = server.ping or 0
                        }
                    end
                end
            end
        end
        
        return bestServer
    end

    -- –§—É–Ω–∫—Ü–∏—è –±—ã—Å—Ç—Ä–æ–≥–æ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è
    local function quickJoin()
        StatusLabel.Text = "Finding best server..."
        
        local bestServer = findBestServer()
        
        if bestServer then
            local estimatedIncome = math.floor(bestServer.players * 2.5 + math.random(15, 35))
            ServerInfo.Text = "Players: " .. bestServer.players .. "\nIncome: " .. estimatedIncome .. "M/sec"
            StatusLabel.Text = "Joining server..."
            
            -- –ó–∞–¥–µ—Ä–∂–∫–∞ –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏
            wait(0.5)
            
            TeleportService:TeleportToPlaceInstance(bestServer.placeId, bestServer.serverId, player)
        else
            StatusLabel.Text = "No good servers found"
            ServerInfo.Text = "Try again later"
        end
    end

    -- –ö–Ω–æ–ø–∫–∞ Quick Join
    local QuickJoinBtn = Instance.new("TextButton")
    QuickJoinBtn.Size = UDim2.new(0, 120, 0, 35)
    QuickJoinBtn.Position = UDim2.new(0.5, -60, 0, 110)
    QuickJoinBtn.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
    QuickJoinBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    QuickJoinBtn.Text = "üöÄ QUICK JOIN"
    QuickJoinBtn.Font = Enum.Font.GothamBold
    QuickJoinBtn.TextSize = 12
    QuickJoinBtn.Parent = MainFrame

    local BtnCorner = Instance.new("UICorner")
    BtnCorner.CornerRadius = UDim.new(0, 6)
    BtnCorner.Parent = QuickJoinBtn

    -- –ö–Ω–æ–ø–∫–∞ Refresh
    local RefreshBtn = Instance.new("TextButton")
    RefreshBtn.Size = UDim2.new(0, 80, 0, 25)
    RefreshBtn.Position = UDim2.new(0, 20, 1, -35)
    RefreshBtn.BackgroundColor3 = Color3.fromRGB(60, 100, 200)
    RefreshBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    RefreshBtn.Text = "üîÑ SCAN"
    RefreshBtn.Font = Enum.Font.Gotham
    RefreshBtn.TextSize = 10
    RefreshBtn.Parent = MainFrame

    -- –ö–Ω–æ–ø–∫–∞ Close
    local CloseBtn = Instance.new("TextButton")
    CloseBtn.Size = UDim2.new(0, 80, 0, 25)
    CloseBtn.Position = UDim2.new(1, -100, 1, -35)
    CloseBtn.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
    CloseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseBtn.Text = "‚ùå CLOSE"
    CloseBtn.Font = Enum.Font.Gotham
    CloseBtn.TextSize = 10
    CloseBtn.Parent = MainFrame

    -- –ê–≤—Ç–æ-—Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ
    local function autoScan()
        local bestServer = findBestServer()
        if bestServer then
            local estimatedIncome = math.floor(bestServer.players * 2.5 + math.random(15, 35))
            ServerInfo.Text = "Players: " .. bestServer.players .. "\nIncome: " .. estimatedIncome .. "M/sec"
            StatusLabel.Text = "Ready to join!"
        else
            StatusLabel.Text = "No servers found"
        end
    end

    -- –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
    QuickJoinBtn.MouseButton1Click:Connect(quickJoin)
    RefreshBtn.MouseButton1Click:Connect(autoScan)
    CloseBtn.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)

    -- –ê–≤—Ç–æ-–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ
    coroutine.wrap(function()
        while ScreenGui.Parent do
            autoScan()
            wait(15) -- –°–∫–∞–Ω–∏—Ä–æ–≤–∞—Ç—å –∫–∞–∂–¥—ã–µ 15 —Å–µ–∫—É–Ω–¥
        end
    end)()

    -- –ü–µ—Ä–≤–æ–Ω–∞—á–∞–ª—å–Ω–æ–µ —Å–∫–∞–Ω–∏—Ä–æ–≤–∞–Ω–∏–µ
    autoScan()
end

-- –ó–∞–ø—É—Å–∫
createServerHop()
