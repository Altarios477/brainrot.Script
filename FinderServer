local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

local player = Players.LocalPlayer

-- ID –∏–≥—Ä—ã Steal a Brainrot (–ø—Ä–æ–≤–µ—Ä–µ–Ω–Ω—ã–π)
local brainrotGameId = 14433750445

-- –°–æ–∑–¥–∞–µ–º —É–ª—É—á—à–µ–Ω–Ω—ã–π –¥–∂–æ–∏–Ω–µ—Ä –ø–æ –∞–Ω–∞–ª–æ–≥–∏–∏ —Å –ø—Ä–∏–º–µ—Ä–æ–º
local function createBrainrotRadar()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "BrainrotRadar"
    ScreenGui.Parent = player.PlayerGui
    
    local MainFrame = Instance.new("Frame")
    MainFrame.Size = UDim2.new(0, 300, 0, 400)
    MainFrame.Position = UDim2.new(0, 20, 0, 20)
    MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
    MainFrame.BorderSizePixel = 0
    MainFrame.Parent = ScreenGui

    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0, 8)
    UICorner.Parent = MainFrame

    -- –ü–µ—Ä–µ—Ç–∞—Å–∫–∏–≤–∞–Ω–∏–µ GUI
    local dragging = false
    local dragInput, dragStart, startPos

    MainFrame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = MainFrame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    MainFrame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    -- –ó–∞–≥–æ–ª–æ–≤–æ–∫
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 40)
    Title.Position = UDim2.new(0, 0, 0, 0)
    Title.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
    Title.TextColor3 = Color3.fromRGB(0, 255, 150)
    Title.Text = "üß† Brainrot Radar"
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 16
    Title.Parent = MainFrame

    local TitleCorner = Instance.new("UICorner")
    TitleCorner.CornerRadius = UDim.new(0, 8)
    TitleCorner.Parent = Title

    -- –°—Ç–∞—Ç—É—Å
    local StatusLabel = Instance.new("TextLabel")
    StatusLabel.Size = UDim2.new(1, -20, 0, 30)
    StatusLabel.Position = UDim2.new(0, 10, 0, 45)
    StatusLabel.BackgroundTransparency = 1
    StatusLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
    StatusLabel.Text = "üîç –ü–æ–∏—Å–∫ —Å–µ—Ä–≤–µ—Ä–æ–≤..."
    StatusLabel.Font = Enum.Font.Gotham
    StatusLabel.TextSize = 12
    StatusLabel.Parent = MainFrame

    -- –°–ø–∏—Å–æ–∫ —Å–µ—Ä–≤–µ—Ä–æ–≤
    local ScrollingFrame = Instance.new("ScrollingFrame")
    ScrollingFrame.Size = UDim2.new(1, -20, 1, -150)
    ScrollingFrame.Position = UDim2.new(0, 10, 0, 80)
    ScrollingFrame.BackgroundTransparency = 1
    ScrollingFrame.Parent = MainFrame

    -- –§—É–Ω–∫—Ü–∏—è –ø–æ–∏—Å–∫–∞ —Å–µ—Ä–≤–µ—Ä–æ–≤
    local function findBrainrotServers()
        local servers = {}
        
        local success, result = pcall(function()
            local response = HttpService:GetAsync("https://games.roblox.com/v1/games/"..brainrotGameId.."/servers/Public?limit=100")
            return HttpService:JSONDecode(response)
        end)
        
        if success and result.data then
            for _, server in ipairs(result.data) do
                if server.playing and server.playing > 5 then -- –¢–æ–ª—å–∫–æ —Å–µ—Ä–≤–µ—Ä–∞ —Å –∏–≥—Ä–æ–∫–∞–º–∏
                    -- –†–∞—Å—á–µ—Ç "–¥–æ—Ö–æ–¥–∞" –Ω–∞ –æ—Å–Ω–æ–≤–µ –∏–≥—Ä–æ–∫–æ–≤
                    local estimatedIncome = math.floor(server.playing * 1.5 + math.random(10, 25))
                    
                    table.insert(servers, {
                        placeId = brainrotGameId,
                        serverId = server.id,
                        income = estimatedIncome,
                        players = server.playing,
                        ping = server.ping or 0
                    })
                end
            end
        end
        
        -- –°–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –ø–æ –∫–æ–ª–∏—á–µ—Å—Ç–≤—É –∏–≥—Ä–æ–∫–æ–≤
        table.sort(servers, function(a, b)
            return a.players > b.players
        end)
        
        return servers
    end

    -- –§—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å–ø–∏—Å–∫–∞
    local function updateServerList()
        StatusLabel.Text = "üîÑ –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ..."
        
        -- –û—á–∏—Å—Ç–∫–∞ —Å—Ç–∞—Ä–æ–≥–æ —Å–ø–∏—Å–∫–∞
        for _, child in ipairs(ScrollingFrame:GetChildren()) do
            if child:IsA("Frame") then
                child:Destroy()
            end
        end

        local servers = findBrainrotServers()
        
        if #servers == 0 then
            StatusLabel.Text = "‚ùå –°–µ—Ä–≤–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã"
            local NoServersLabel = Instance.new("TextLabel")
            NoServersLabel.Size = UDim2.new(1, 0, 0, 60)
            NoServersLabel.Position = UDim2.new(0, 0, 0, 0)
            NoServersLabel.BackgroundTransparency = 1
            NoServersLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
            NoServersLabel.Text = "–°–µ—Ä–≤–µ—Ä–∞ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã\n–ü–æ–ø—Ä–æ–±—É–π—Ç–µ –æ–±–Ω–æ–≤–∏—Ç—å –ø–æ–∑–∂–µ"
            NoServersLabel.Font = Enum.Font.Gotham
            NoServersLabel.TextSize = 12
            NoServersLabel.TextWrapped = true
            NoServersLabel.Parent = ScrollingFrame
        else
            StatusLabel.Text = "‚úÖ –ù–∞–π–¥–µ–Ω–æ: " .. #servers .. " —Å–µ—Ä–≤–µ—Ä–æ–≤"
            
            for i, server in ipairs(servers) do
                local ServerFrame = Instance.new("Frame")
                ServerFrame.Size = UDim2.new(1, 0, 0, 60)
                ServerFrame.Position = UDim2.new(0, 0, 0, (i-1)*65)
                ServerFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 45)
                ServerFrame.Parent = ScrollingFrame

                local ServerCorner = Instance.new("UICorner")
                ServerCorner.CornerRadius = UDim.new(0, 6)
                ServerCorner.Parent = ServerFrame

                -- –ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ —Å–µ—Ä–≤–µ—Ä–µ
                local PlayersLabel = Instance.new("TextLabel")
                PlayersLabel.Size = UDim2.new(0, 120, 0, 20)
                PlayersLabel.Position = UDim2.new(0, 10, 0, 5)
                PlayersLabel.BackgroundTransparency = 1
                PlayersLabel.TextColor3 = Color3.fromRGB(200, 200, 255)
                PlayersLabel.Text = "üë• " .. server.players .. " –∏–≥—Ä–æ–∫–æ–≤"
                PlayersLabel.Font = Enum.Font.Gotham
                PlayersLabel.TextSize = 12
                PlayersLabel.Parent = ServerFrame

                local IncomeLabel = Instance.new("TextLabel")
                IncomeLabel.Size = UDim2.new(0, 120, 0, 20)
                IncomeLabel.Position = UDim2.new(0, 10, 0, 25)
                IncomeLabel.BackgroundTransparency = 1
                IncomeLabel.TextColor3 = Color3.fromRGB(0, 255, 150)
                IncomeLabel.Text = "üí∞ ~" .. server.income .. "M/—Å–µ–∫"
                IncomeLabel.Font = Enum.Font.GothamBold
                IncomeLabel.TextSize = 12
                IncomeLabel.Parent = ServerFrame

                -- –ö–Ω–æ–ø–∫–∞ –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è
                local JoinButton = Instance.new("TextButton")
                JoinButton.Size = UDim2.new(0, 80, 0, 30)
                JoinButton.Position = UDim2.new(1, -90, 0.5, -15)
                JoinButton.BackgroundColor3 = Color3.fromRGB(0, 200, 100)
                JoinButton.TextColor3 = Color3.fromRGB(255, 255, 255)
                JoinButton.Text = "üöÄ –í–û–ô–¢–ò"
                JoinButton.Font = Enum.Font.GothamBold
                JoinButton.TextSize = 11
                JoinButton.Parent = ServerFrame

                JoinButton.MouseButton1Click:Connect(function()
                    StatusLabel.Text = "üîÑ –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ..."
                    TeleportService:TeleportToPlaceInstance(server.placeId, server.serverId, player)
                end)
            end

            ScrollingFrame.CanvasSize = UDim2.new(0, 0, 0, #servers * 65)
        end
    end

    -- –ö–Ω–æ–ø–∫–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
    local RefreshButton = Instance.new("TextButton")
    RefreshButton.Size = UDim2.new(0, 120, 0, 35)
    RefreshButton.Position = UDim2.new(0, 20, 1, -50)
    RefreshButton.BackgroundColor3 = Color3.fromRGB(60, 100, 200)
    RefreshButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    RefreshButton.Text = "üîÑ –û–ë–ù–û–í–ò–¢–¨"
    RefreshButton.Font = Enum.Font.Gotham
    RefreshButton.TextSize = 12
    RefreshButton.Parent = MainFrame

    local CloseButton = Instance.new("TextButton")
    CloseButton.Size = UDim2.new(0, 120, 0, 35)
    CloseButton.Position = UDim2.new(1, -140, 1, -50)
    CloseButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
    CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.Text = "‚ùå –ó–ê–ö–†–´–¢–¨"
    CloseButton.Font = Enum.Font.Gotham
    CloseButton.TextSize = 12
    CloseButton.Parent = MainFrame

    -- –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
    RefreshButton.MouseButton1Click:Connect(updateServerList)
    CloseButton.MouseButton1Click:Connect(function()
        ScreenGui:Destroy()
    end)

    -- –ê–≤—Ç–æ–æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∫–∞–∂–¥—ã–µ 30 —Å–µ–∫—É–Ω–¥
    local autoRefresh = coroutine.create(function()
        while ScreenGui.Parent do
            wait(30)
            if ScreenGui.Parent then
                updateServerList()
            end
        end
    end)
    coroutine.resume(autoRefresh)

    -- –ü–µ—Ä–≤–æ–Ω–∞—á–∞–ª—å–Ω–∞—è –∑–∞–≥—Ä—É–∑–∫–∞
    updateServerList()
end

-- –ó–∞–ø—É—Å–∫
createBrainrotRadar()
